root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.twig]
indent_size = 4

[*.{yaml,yml}]
indent_size = 4

[*.{js,scss,css}]
indent_size = 2

[Jenkinsfile]
indent_size = 2

[*.json]
indent_size = 4

[Makefile]
indent_style = tab
